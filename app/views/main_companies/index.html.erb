<p id="notice"><%= notice %></p>

<h1>Main Companies</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_companies.each do |main_company| %>
      <tr>
        <td><%= main_company.nome %></td>
        <td><%= main_company.cnpj %></td>
        <td><%= main_company.brand %></td>
        <td><%= link_to 'Show', main_company %></td>
        <td><%= link_to 'Edit', edit_main_company_path(main_company) %></td>
        <td><%= link_to 'Destroy', main_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

